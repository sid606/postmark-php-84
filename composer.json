{
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/sid606/postmark-php-84"
    }
  ],
  "name": "sid606/postmark-php-84",
  "license": "MIT",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "description": "The officially fork supported client for Postmark (http://postmarkapp.com)",
  "require": {
    "php": "~8.1 || ~8.2|| ~8.3|| ~8.4",
    "guzzlehttp/guzzle": "^7.8",
    "sid606/postmark-php-84": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.40"
  },
  "autoload": {
    "psr-0": {
      "Postmark\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": false
    }
  }
}
